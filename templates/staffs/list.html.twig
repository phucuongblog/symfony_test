{% extends 'base.html.twig' %}

{% block title %}Employees List{% endblock %}

{% block body %}
    <h1>Employees List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Organization</th>
                <th>Position</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for employee in employees %}
                <tr>
                    <td>{{ employee.id }}</td>
                    <td>{{ employee.name }}</td>
                    <td>{{ employee.phone }}</td>
                    <td>{{ employee.email }}</td>
                    <td>{{ employee.organization.name }}</td>
                    <td>{{ employee.position.name }}</td>
                    <td>
                        <a href="{{ path('staffs_show', {'id': employee.id}) }}">show</a>
                        <a href="{{ path('staffs_edit', {'id': employee.id}) }}">edit</a>
                        <a href="{{ path('staff_show_list_employees', {'id' : employee.id }) }}">list employees</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}